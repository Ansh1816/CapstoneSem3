generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String?
  badges    String? // JSON string or comma separated
  gems      Gem[]
  reviews   Review[]
  votes     Vote[]
  savedGems SavedGem[]
  createdAt DateTime   @default(now())
}

model Gem {
  id          Int        @id @default(autoincrement())
  title       String
  description String     @db.Text
  category    String     @default("Other") // New Category Field
  latitude    Float
  longitude   Float
  images      String?    @db.LongText // JSON string of URLs or Base64
  location    String?
  verified    Boolean    @default(false)
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  reviews     Review[]
  votes       Vote[]
  savedBy     SavedGem[]
  createdAt   DateTime   @default(now())
}

model Review {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  rating    Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  gemId     Int
  gem       Gem      @relation(fields: [gemId], references: [id])
  createdAt DateTime @default(now())
}

model Vote {
  id     Int      @id @default(autoincrement())
  userId Int
  user   User     @relation(fields: [userId], references: [id])
  gemId  Int
  gem    Gem      @relation(fields: [gemId], references: [id])
  type   VoteType

  @@unique([userId, gemId])
}

model SavedGem {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  gemId     Int
  gem       Gem      @relation(fields: [gemId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, gemId])
}

enum VoteType {
  UP
  DOWN
}
